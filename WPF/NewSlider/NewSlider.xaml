<UserControl x:Class="NewSlider.NewSlider"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:NewSlider"
             mc:Ignorable="d" 
             d:DesignHeight="30" d:DesignWidth="330" Width="330" Margin ="1">
    <Grid MouseMove="ybar_MouseMove" MouseLeave="ybar_MouseLeave" MouseLeftButtonUp="ybar_MouseLeftButtonUp">
        <Rectangle x:Name="xbar" Fill="#FFF4F4F5" HorizontalAlignment="Left" Height="10" Margin="15,10,0,0" Stroke="Black" VerticalAlignment="Top" Width="300"/>
        <Ellipse x:Name="ybar" Fill="Gray" HorizontalAlignment="Left" Height="30" Margin="0,0,0,0" Stroke="Black" VerticalAlignment="Top" Width="30"
                    MouseLeftButtonDown="ybar_MouseLeftButtonDown" />
    </Grid>
</UserControl>
