<UserControl x:Class="Slider.NewSlider"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Slider"
             mc:Ignorable="d" 
             d:DesignHeight="30" d:DesignWidth="330" Width="330" Margin ="1"
             x:Name="control" MinHeight="30" MaxHeight="30" MinWidth="80">
    <Grid x:Name="grid">
        <Rectangle x:Name="xbar" Fill="#FFF4F4F5" HorizontalAlignment="Stretch" Height="10" Margin="15,10,15,0" Stroke="Gray" VerticalAlignment="Top" />
        <Ellipse x:Name="ybar" Fill="Gray" HorizontalAlignment="Left" Height="30" Margin="0,0,0,0" Stroke="Gray" VerticalAlignment="Top" Width="30"
                    MouseLeftButtonDown="ybar_MouseLeftButtonDown" MouseMove="ybar_MouseMove" MouseLeftButtonUp="ybar_MouseLeftButtonUp"/>
    </Grid>
</UserControl>
