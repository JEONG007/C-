<Window x:Class="NewSlider.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:NewSlider"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
        <StackPanel Orientation="Horizontal">
            <local:NewSlider x:Name="slider1" />
            <TextBlock Text="{Binding ElementName=slider1, Path=Value}" 
                       VerticalAlignment="Center" Width="20" Margin="5,0,0,0"/>
        </StackPanel>
        <StackPanel Orientation="Horizontal">
            <local:NewSlider x:Name="slider2"/>
            <TextBlock Text="{Binding ElementName=slider2, Path=Value}" 
                       VerticalAlignment="Center" Width="20" Margin="5,0,0,0"/>
        </StackPanel>
        <StackPanel Orientation="Horizontal">
            <local:NewSlider x:Name="slider3"/>
            <TextBlock Text="{Binding ElementName=slider3, Path=Value}" 
                       VerticalAlignment="Center" Width="20" Margin="5,0,0,0"/>
        </StackPanel>
    </StackPanel>
</Window>
